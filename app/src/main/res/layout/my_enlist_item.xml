<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <!--我的报名每一条item的layout-->
    <TextView
        android:id="@+id/topical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="项目主题"
        android:textSize="18sp"
        android:layout_margin="5dp"
        />

    <RelativeLayout
        android:id="@+id/someoneSignUp"
        android:layout_below="@id/topical"
        android:layout_width="match_parent"
        android:layout_height="80dp">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/myEnlistPicture"
            android:layout_height="60dp"
            android:layout_width="60dp"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:src="@drawable/iv_user_image_default"
            />

        <TextView
            android:id="@+id/nickname"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:text="昵称 "
            android:textSize="15sp"
            android:layout_toRightOf="@+id/myEnlistPicture"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/department"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:text="部门 "
            android:textSize="15sp"
            android:layout_below="@+id/nickname"
            android:layout_toRightOf="@+id/myEnlistPicture"
            android:layout_marginTop="2dp"
            />

        <TextView
            android:id="@+id/contactWay"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:text="联系方式 "
            android:textSize="15sp"
            android:layout_below="@+id/department"
            android:layout_toRightOf="@+id/myEnlistPicture"
            android:layout_marginTop="2dp"
            />


        <Button
            android:id="@+id/cancelBtn"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="30dp"
            android:text="取消"
            />


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#ccc"
            android:layout_alignParentBottom="true"
            />

    </RelativeLayout>

</RelativeLayout>